---
import Layout from '../layouts/Layout.astro';
import RDFUploader from '../components/RDFUploader';
import ValidationReport from '../components/ValidationReport';
import SunburstChart from '../components/SunburstChart';
import MetricTable from '../components/MetricTable';
import ValidationOptions from '../components/ValidationOptions';
---

<Layout title="MQA Validator Client-Side">
  <main>
    <h1>Metadata Quality Assessment</h1>
    <div class="container">
      <div class="options-panel">
        <ValidationOptions client:load />
      </div>
      <div class="uploader-panel">
        <RDFUploader client:load />
      </div>
      <div class="results-panel">
        <div class="chart-container">
          <SunburstChart client:idle />
        </div>
        <div class="report-container">
          <ValidationReport client:idle />
        </div>
        <div class="metrics-container">
          <MetricTable client:idle />
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    display: grid;
    grid-template-columns: 1fr 3fr;
    grid-template-rows: auto 1fr;
    gap: 1rem;
  }
  /* MÃ¡s estilos... */
</style>